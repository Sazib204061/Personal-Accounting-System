#:include main.kv

LoginScreen:
    name:"login"
    MDFloatLayout: #Parent 1
        md_bg_color: 1, 1, 1, 1
        MDFloatLayout: #Parent 2
            size_hint: .2, .06
            pos_hint: {"center_x": 0.9, "center_y": .95}
            MDFloatLayout:  #Parent 3
                size_hint: .2, 1
                pos_hint: {"center_x": 0, "center_y": .5}
                canvas:
                    Color:
                        rgb: rgba(139, 202, 193, 255)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [8, 0, 0, 8]
                MDIconButton:  #Parent 4
                    id: color1
                    icon: "circle"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    pos_hint: {"center_x": .5, "center_y": .5}
                    user_font_size: "15sp"
                    on_release: app.change_color(self)
            MDFloatLayout:
                size_hint: .2, 1
                pos_hint: {"center_x": .4, "center_y": .5}
                canvas:
                    Color:
                        rgb: rgba(177,35,65,255)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                MDIconButton:
                    id: color2
                    icon: "circle"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    pos_hint: {"center_x": .5, "center_y": .5}
                    user_font_size: "15sp"
                    on_release: app.change_color(self)
            MDFloatLayout:
                size_hint: .2, 1
                pos_hint: {"center_x": .8, "center_y": .5}
                canvas:
                    Color:
                        rgb: rgba(99, 102, 241, 255)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [0, 8, 8, 0]
                MDIconButton:
                    id: color3
                    icon: "circle"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    pos_hint: {"center_x": .5, "center_y": .5}
                    user_font_size: "15sp"
                    on_release: app.change_color(self)
        MDLabel:
            text: "Hey, Login Now."
            pos_hint: {"center_x": .25, "center_y": .75}
            size_hint_x: .42
            halign: "left"
            font_name: "fonts/Poppins-SemiBold.ttf"
            font_size: "25sp"
        MDLabel:
            text: "Stay with your PAS"
            pos_hint: {"center_x": .25, "center_y": .67}
            size_hint_x: .42
            halign: "left"
            font_name: "fonts/Poppins-Regular.ttf"
            font_size: "14sp"
        
        MDFloatLayout:
            size_hint: .8, .09
            pos_hint: {"center_x": .5, "center_y": .55}
            canvas:
                Color:
                    rgb: rgba(245, 245, 245, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [8]
            TextInput:
                id: email
                hint_text: "Email"
                size_hint: 1, None
                pos_hint: {"center_x": .5, "center_y": .5}
                height: self.minimum_height
                multiline: False
                hint_text_color: rgba(168, 168, 168, 255)
                background_color: 0, 0, 0, 0
                padding: 18
                font_name: "fonts/Poppins-Regular.ttf"
                font_size: "16sp"
        MDFloatLayout:
            size_hint: .8, .09
            pos_hint: {"center_x": .5, "center_y": .43}
            canvas:
                Color:
                    rgb: rgba(245, 245, 245, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [8]
            TextInput:
                id: cpasswrd
                hint_text: "Password"
                size_hint: 1, None
                pos_hint: {"center_x": .5, "center_y": .5}
                height: self.minimum_height
                multiline: False
                password: True
                hint_text_color: rgba(168, 168, 168, 255)
                background_color: 0, 0, 0, 0
                padding: 18
                font_name: "fonts/Poppins-Regular.ttf"
                font_size: "16sp"
        MDTextButton:
            text: "Forgate Password"
            text_color: rgba(168, 168, 168, 255)
            pos_hint: {"center_x": .19, "center_y": .33}
            halign: "left"
            font_name: "fonts/Poppins-Regular.ttf"
            font_size: "14sp"
        MDTextButton:
            text: "Donâ€™t have an account?"
            text_color: rgba(168, 168, 168, 255)
            pos_hint: {"center_x": .21, "center_y": .25}
            halign: "left"
            font_name: "fonts/Poppins-Regular.ttf"
            font_size: "14sp"
        MDTextButton:
            text: "Sign Up"
            halign: "center"
            font_name: "fonts/Poppins-SemiBold.ttf"
            text_color: rgba(177,35,65,255)
            font_size: "14sp"
            pos_hint: {"center_x": .75, "center_y": .25}
            on_press: root.manager.current = 'signup'
            
        Button:
            text: "Login"
            font_name: "fonts/Poppins-Regular.ttf"
            size_hint: .8, .09
            font_size: "18sp"
            pos_hint: {"center_x": .5, "center_y": .15}
            background_color: 0, 0, 0, 0
            on_release: app.receive_info(email, cpasswrd)
            canvas.before:
                Color:
                    rgb: app.btn_color
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [8]
                    
                
    
        
                        