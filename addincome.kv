AddincomeScreen:
    name:"addincome"
    MDFloatLayout: #Parent 1
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            id: back
            icon: "chevron-left"
            user_font_size: "35sp"
            pos_hint: {"center_y": .95}
            on_press: root.manager.current = 'addinfo'
        MDLabel:
            text: "Back"
            font_size: "18sp"
            font_name: "fonts/Poppins-Regular.ttf"
            pos_hint: {"center_x": .55, "center_y": .949}
        MDFloatLayout: #Parent 2
            size_hint: .2, .06
            pos_hint: {"center_x": 0.9, "center_y": .95}
            MDFloatLayout:  #Parent 3
                size_hint: .2, 1
                pos_hint: {"center_x": 0, "center_y": .5}
                canvas:
                    Color:
                        rgb: rgba(139, 202, 193, 255)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [8, 0, 0, 8]
                MDIconButton:  #Parent 4
                    id: color1
                    icon: "circle"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    pos_hint: {"center_x": .5, "center_y": .5}
                    user_font_size: "15sp"
                    on_release: app.change_color(self)
            MDFloatLayout:
                size_hint: .2, 1
                pos_hint: {"center_x": .4, "center_y": .5}
                canvas:
                    Color:
                        rgb: rgba(177,35,65,255)
                    Rectangle:
                        size: self.size
                        pos: self.pos
                MDIconButton:
                    id: color2
                    icon: "circle"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    pos_hint: {"center_x": .5, "center_y": .5}
                    user_font_size: "15sp"
                    on_release: app.change_color(self)
            MDFloatLayout:
                size_hint: .2, 1
                pos_hint: {"center_x": .8, "center_y": .5}
                canvas:
                    Color:
                        rgb: rgba(99, 102, 241, 255)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [0, 8, 8, 0]
                MDIconButton:
                    id: color3
                    icon: "circle"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    pos_hint: {"center_x": .5, "center_y": .5}
                    user_font_size: "15sp"
                    on_release: app.change_color(self)
        MDLabel:
            text: "Add New Income Information"
            pos_hint: {"center_x": .5, "center_y": .85}
            size_hint_x: 1
            halign: "center"
            font_name: "fonts/Poppins-SemiBold.ttf"
            font_size: "25sp"
        MDLabel:
            text: "Plese fillup all data field"
            pos_hint: {"center_x": .25, "center_y": .77}
            size_hint_x: .42
            halign: "left"
            font_name: "fonts/Poppins-Regular.ttf"
            font_size: "14sp"
            
            
            
            
        MDFloatLayout:
            size_hint: .8, .09
            pos_hint: {"center_x": .5, "center_y": .65}
            canvas:
                Color:
                    rgb: rgba(245, 245, 245, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [8]
            TextInput:
                id: income_id
                hint_text: "Income ID:"
                size_hint: 1, None
                pos_hint: {"center_x": .5, "center_y": .5}
                height: self.minimum_height
                multiline: False
                hint_text_color: rgba(168, 168, 168, 255)
                background_color: 0, 0, 0, 0
                padding: 18
                font_name: "fonts/Poppins-Regular.ttf"
                font_size: "16sp"
                
        MDFloatLayout:
            size_hint: .8, .09
            pos_hint: {"center_x": .5, "center_y": .53}
            canvas:
                Color:
                    rgb: rgba(245, 245, 245, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [8]
            TextInput:
                id: source
                hint_text: "Income Source:"
                size_hint: 1, None
                pos_hint: {"center_x": .5, "center_y": .5}
                height: self.minimum_height
                multiline: False
                hint_text_color: rgba(168, 168, 168, 255)
                background_color: 0, 0, 0, 0
                padding: 18
                font_name: "fonts/Poppins-Regular.ttf"
                font_size: "16sp"
                
        MDFloatLayout:
            size_hint: .8, .09
            pos_hint: {"center_x": .5, "center_y": .41}
            canvas:
                Color:
                    rgb: rgba(245, 245, 245, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [8]
            TextInput:
                id: date
                hint_text: "Date(DD-MM-YYYY):"
                size_hint: 1, None
                icon_right: "eye-off"
                pos_hint: {"center_x": .5, "center_y": .5}
                height: self.minimum_height
                multiline: False
                #password: True
                hint_text_color: rgba(168, 168, 168, 255)
                background_color: 0, 0, 0, 0
                padding: 18
                font_name: "fonts/Poppins-Regular.ttf"
                font_size: "16sp"
                
        MDFloatLayout:
            size_hint: .8, .09
            pos_hint: {"center_x": .5, "center_y": .29}
            canvas:
                Color:
                    rgb: rgba(245, 245, 245, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [8]
            TextInput:
                id: amount
                hint_text: "Amount(TK):"
                size_hint: 1, None
                icon_right: "eye-off"
                pos_hint: {"center_x": .5, "center_y": .5}
                height: self.minimum_height
                multiline: False
                #password: True
                hint_text_color: rgba(168, 168, 168, 255)
                background_color: 0, 0, 0, 0
                padding: 18
                font_name: "fonts/Poppins-Regular.ttf"
                font_size: "16sp"
            
        Button:
            text: "ADD"
            font_name: "fonts/Poppins-Regular.ttf"
            size_hint: .8, .09
            font_size: "18sp"
            pos_hint: {"center_x": .5, "center_y": .15}
            background_color: 0, 0, 0, 0
            on_release: app.send_income_info(income_id, source, date, amount)
            canvas.before:
                Color:
                    rgb: app.btn_color
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [8]
                    
                
    
        
                        